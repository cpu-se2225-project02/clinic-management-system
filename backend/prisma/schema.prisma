// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator nexus {
  provider = "nexus-prisma"
}

model Patient {
  id        Int     @id @default(autoincrement())
  f_name    String
  l_name    String
  m_initial String?
  suffix    String?
  sex       String
  age       Int
  address   String
  birthdate String
}

model Prescription {
  id                Int @id
  pres_name         String
  pres_dosage       Int
}